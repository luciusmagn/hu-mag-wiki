@import url('https://fonts.googleapis.com/css?family=Arvo&display=swap');

*
    transition .5s

body
    background-color #fff
    padding 50px
    font 15px/1.5 'Arvo', "Noto Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
    color #555
    font-weight 400
    display flex
    width 930px
    margin 0 auto

.logo
    display block
    margin-left auto
    margin-right auto

h1, h2, h3, h4, h5, h6
    color #222
    margin-top 1rem
    margin-bottom 1rem

p, ul, ol, table, pre, dl
    margin 0 0 20px

main
    width 550px
    margin-left auto
    padding-bottom 50px
    p
        text-align justify

h1, h2, h3
    line-height 1.1

h1
    font-size 28px

h2
    color #393939

h3, h4, h5, h6
    color #494949

a
    color #39c
    text-decoration none
    &:hover
        color #069
        small
            color #777
    small
        font-size 11px
        color #777
        margin-top -0.3em
        display block

blockquote
    border-left 1px solid #e5e5e5
    margin 0
    padding 0 0 0 20px
    font-style italic

code, pre
    font-family Monaco, Bitstream Vera Sans Mono, Lucida Console, Terminal, Consolas, Liberation Mono, DejaVu Sans Mono, Courier New, monospace
    color #333
    font-size 12px

pre
    padding 8px 15px
    background #151515
    overflow-x auto

table
    width 100%
    border-collapse collapse

th, td
    text-align left
    padding 5px 10px
    border-bottom 1px solid #e5e5e5

dt
    color #444
    font-weight 700

th
    color #444

img
    max-width 100%

header
    flex-direction column
    width 280px
    max-height 800px
    float left
    position fixed
    -webkit-font-smoothing subpixel-antialiased
    img
        max-height 280px
        max-width 280px
    ul
        list-style none
        height 40px
        padding 0
        background #f4f4f4
        border-radius 5px
        border 1px solid #e0e0e0
        width 270px
        a
            line-height 1
            font-size 11px
            color #999
            display block
            text-align center
            padding-top 6px
            height 34px
            &:hover
                color #999
            &:active
                background-color #f0f0f0
            strong
                font-size 14px
                display block
                color #222
        li
            & + li
                & + li
                    border-right none
                    width 89px
    li
        width 89px
        float left
        border-right 1px solid #e0e0e0
        height 40px
        &:first-child
            a
                border-radius 5px 0 0 5px
        &:last-child
            a
                border-radius 0 5px 5px 0
    nav
        flex 1
        text-align center
        font-size 1.1em
        display flex
        height 80px
        width 280px
        flex-direction row
        border-top solid 1px #e5e5e5
        border-bottom solid 1px #e5e5e5
        padding-top 7px
        section
            width 50%
            flex 1
            height 70px
            display flex
            flex-direction column

strong
    color #222
    font-weight 700

small
    font-size 11px

hr
    border 0
    background #e5e5e5
    height 1px
    margin 0 0 20px

footer
    width 270px
    float left
    position fixed
    bottom 50px
    -webkit-font-smoothing subpixel-antialiased

ul li, ul li p, ul
    text-indent 0
    text-align left
    margin 0

ul + h2, ul + h3
    margin-top 20px

article
    a
        *:hover
            color #000

a:active, a:focus
    outline 0
    border none
    -moz-outline-style none

@media print, screen and (max-width:960px)
    body
        flex-direction column
        width auto
        margin 0
        header
            text-align center
    main
        padding 20px 0
        margin 0 0 20px
    header
        a
            small
                display inline
        ul
            position absolute
            right 50px
            top 52px
        nav
            width auto

@media print, screen and (max-width:960px)
	header, main, footer
	    align-self center
	    float none
	    position static
	    width auto

@media print, screen and (max-width:720px)
    body
        word-wrap break-word
    header
        padding 0

@media print, screen and (max-width:720px)
	header ul, header p.view
    	position static

@media print, screen and (max-width:720px)
	pre, code
    	word-wrap normal

@media print, screen and (max-width:480px)
    body
        padding 15px
    header
        ul
            width 99%

@media print, screen and (max-width:480px)
	header li, header ul li + li + li
    	width 33%

@media print
    body
        padding 0.4in
        font-size 12pt
        color #444
